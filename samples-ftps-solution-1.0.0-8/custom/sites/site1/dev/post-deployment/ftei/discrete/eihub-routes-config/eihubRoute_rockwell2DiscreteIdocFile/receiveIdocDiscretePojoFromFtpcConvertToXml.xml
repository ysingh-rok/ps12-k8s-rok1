<routeTemplates xmlns="http://camel.apache.org/schema/spring" xmlns:camel="http://camel.apache.org/schema/spring">
	<routeTemplate id="receiveIdocDiscretePojoFromFtpcConvertToXmlTemplate">
		<route id="receiveIdocDiscretePojoFromFtpcConvertToXml">
			<description>Receives Java Transfer Object Pojo from FTPC and transforms them to Discrete IDoc data files.</description>
			<from id="idocDiscretePojoToErpQueue" uri="activemq:queue:{{queue-name.to-erp.discrete}}" />
			<to id="unwrapJmsObject" pattern="InOut" uri="language:groovy:resourceUri?script={{groovyScript.path.discrete}}UnwrapPayload.groovy" />
			<log id="logPayload" loggingLevel="DEBUG" message="payload: ${body}" />
			<choice id="idocDiscretePojoChoice">
				<description>Discrete IDoc Pojo to ERP Choice</description>
				<when id="consumedPartInfoPojo">
					<simple>${body} is 'com.rockwell.integration.sap.ConsumedPartInfo'</simple>
					<to id="consumedPartInfoConversion" pattern="InOut" uri="language:groovy:resourceUri?script={{groovyScript.path.discrete}}ConsumedPartInfoConversion.groovy" />
					<to id="consumedPartInfoConversion" pattern="InOut" uri="seda:transformedFileToErp" />
				</when>
				<when id="operationCompletionInfoPojo">
					<simple>${body} is 'com.rockwell.integration.sap.OperationCompletionInfo'</simple>
					<to id="operationCompletionInfoConversion" pattern="InOut" uri="language:groovy:resourceUri?script={{groovyScript.path.discrete}}OperationCompletionInfoConversion.groovy" />
					<to id="vm_operationCompletionInfoConversion" pattern="InOut" uri="seda:transformedFileToErp" />
				</when>
				<when id="workOrderCompletionInfoPojo">
					<simple>${body} is 'com.rockwell.integration.sap.WorkOrderCompletionInfo'</simple>
					<to id="workOrderCompletionInfoConversion" pattern="InOut" uri="language:groovy:resourceUri?script={{groovyScript.path.discrete}}WorkOrderCompletionInfoConversion.groovy" />
					<to id="workOrderCompletionInfoConversion" pattern="InOut" uri="seda:transformedFileToErp" />
				</when>
				<otherwise id="unknownMsg_idocDiscretePojoChoice">
					<to id="unknownMsgCaught_DiscreteReceiveFromFTPC" uri="seda:unknownMsgCaughtToErp?exchangePattern=InOut" />
				</otherwise>
			</choice>
			<onException id="onJmsException_pojoFromJms">
				<exception>jakarta.jms.JMSException</exception>
				<redeliveryPolicy maximumRedeliveries="2" />
				<to id="jmsExceptionHandling_pojoFromJms" pattern="InOut" uri="seda:jmsErrorOutMsgCaught" />
			</onException>
			<onException id="onCommunicationException_pojoFromJms">
				<exception>org.apache.camel.ExchangeTimedOutException</exception>
				<redeliveryPolicy maximumRedeliveries="2" />
				<to id="communicationExceptionHandling_pojoFromJms" pattern="InOut" uri="seda:jmsErrorOutMsgCaught" />
			</onException>
			<onException id="onTransformerException_pojoFromJms">
				<exception>org.apache.camel.RuntimeTransformException</exception>
				<to id="transformerExceptionHandling_pojoFromJms" pattern="InOut" uri="seda:transformerErrorOutMsgCaught" />
			</onException>
			<onException id="onRouteException_pojoFromJms">
				<exception>java.lang.Exception</exception>
				<redeliveryPolicy maximumRedeliveries="2" />
				<to id="routeExceptionHandling_pojoFromJms" pattern="InOut" uri="seda:onRouteErrorOutMsgCaught" />
			</onException>
		</route>
	</routeTemplate>
</routeTemplates>
