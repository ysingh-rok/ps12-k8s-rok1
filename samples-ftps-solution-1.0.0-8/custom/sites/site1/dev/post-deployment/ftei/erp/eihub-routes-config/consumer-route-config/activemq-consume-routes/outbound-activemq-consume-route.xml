<routeTemplates
	xmlns="http://camel.apache.org/schema/spring"
	xmlns:b2mml="http://www.mesa.org/xml/B2MML">
	<routeTemplate id="receiveJsonFromAMQTemplate">
		<route id="receiveOutboundJsonFromAMQ">
			<description>Receives JSON from FTPC and send it for conversion to
				XML data</description>
			<from id="=JsonToErpQueue"
				uri="activemq:queue:{{queue-name.to-erp.erp}}" />

			<log id="outbound_log" loggingLevel="debug"
				message="received data: ${body}" />
			<process id="stringtojsonObject" ref="outboundProcessor" />
			<choice>
				<when>
					<simple>${header.status} == 'TOTAL_FAILURE'</simple>
					<to id="generateResponseFailure" uri="seda:generateResponseJson" />
				</when>
				<otherwise>
					<to id="toCentralOutboundProcessorRoute"
						uri="seda:OutboundProcessing" />
				</otherwise>
			</choice>
			<onException id="onJMSException_jsonFromJms">
				<exception>jakarta.jms.JMSException</exception>
				<redeliveryPolicy maximumRedeliveries="2" />
				<to id="jmsExceptionHandling_jsonFromJms" pattern="InOut"
					uri="seda:jmsErrorOutMsgCaught" />
			</onException>
			<onException id="onCommunicationException_jsonFromJms">
				<exception>org.apache.camel.ExchangeTimedOutException</exception>
				<redeliveryPolicy maximumRedeliveries="2" />
				<to id="communicationExceptionHandling_jsonFromJms"
					pattern="InOut" uri="seda:jmsErrorOutMsgCaught" />
			</onException>
			<onException id="onTransformerException_jsonFromJms">
				<exception>org.apache.camel.RuntimeTransformException</exception>
				<to id="transformerExceptionHandling_jsonFromJms" pattern="InOut"
					uri="seda:transformerErrorOutMsgCaught" />
			</onException>
			<onException id="onRouteException_jsonFromJms">
				<exception>java.lang.Exception</exception>
				<redeliveryPolicy maximumRedeliveries="2" />
				<to id="onRouteExceptionHandling_jsonFromJms" pattern="InOut"
					uri="seda:onRouteErrorOutMsgCaught" />
			</onException>
		</route>
	</routeTemplate>
</routeTemplates>
