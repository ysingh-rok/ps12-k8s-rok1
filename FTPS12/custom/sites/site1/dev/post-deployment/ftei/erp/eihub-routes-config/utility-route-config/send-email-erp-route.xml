<routeTemplates xmlns="http://camel.apache.org/schema/spring">
	<routeTemplate id="sendEmail_erpTemplate">
		<route id="sendEmail_erp">
			<description>This route is used to send emails to intended
				stakeholders. They need from, to, subject and template name.</description>
			<from id="sendEmails" uri="seda:sendEmail_erp" />
			<log id="logFileName_emailRoute" message="Sending email..." />
			<process id="decorateEmailBody" ref="emailBodyGenerator" />
			<to id="sendToSMTP"
				uri="smtp://{{smtp.host}}:{{smtp.port}}?username={{smtp.username}}&amp;password={{smtp.password}}&amp;mail.smtp.auth=true&amp;mail.smtp.starttls.enable=true&amp;mail.smtp.socketFactory.fallback=false&amp;mail.smtp.ssl.protocols=TLSv1.3 TLSv1.2&amp;mail.smtp.ssl.trust={{smtp.host}}" />
			<onException id="exceptionLogIn">
				<exception>java.lang.Exception</exception>
				<log id="exceptionLog"
					message="something went wrong, Check properties" />
			</onException>
			<log id="logFileName_emailRoute"
				message="E-mail sent to {{email.type.failure.smtp.to}}" />
		</route>
	</routeTemplate>
</routeTemplates>
