<routeTemplates xmlns="http://camel.apache.org/schema/spring" xmlns:camel="http://camel.apache.org/schema/spring">
	<routeTemplate id="responseFromFtpcTemplate">
		<route id="responseFromFtpc">
			<description>Processes a confirmation response from FTPC and moves the IDoc file to the processed folder.</description>
			<from id="getResponseFromFtpc" uri="activemq:queue:{{queue-name.response.to-erp.discrete}}?exchangePattern=InOnly&amp;concurrentConsumers=4&amp;asyncConsumer=true" />
			<to id="moveToProcessedFolder" pattern="InOut" uri="language:groovy:resourceUri?script={{groovyScript.path.discrete}}InboundMoveProcessedFile.groovy" />
			<choice id="idocResponseChoice">
				<description>Check the Response for success or failure.</description>
				<when id="failed">
					<simple>${body} contains ' fail'</simple>
					<setHeader id="setEmailHeaderTypeFaildiscrete" name="emailType">
						<constant>{{email.type.failure}}</constant>
					</setHeader>
					<to id="vmFailSmtp_responseFromFtpc" uri="seda:sendEmail_discreteInbound" />
				</when>
				<when id="success">
					<simple>${body} contains 'moved successfully'</simple>
					<setHeader id="setEmailHeaderSubjectSuccess" name="subject">
						<constant>FTPC response message (success)</constant>
					</setHeader>
				</when>
				<otherwise id="unknownMsg_idocResponseChoice">
					<to id="unknownMsgCaught_responseFromFtpc" uri="seda:unknownMsgCaught" />
				</otherwise>
			</choice>
			<onException id="onJMSException_responseFromFtpc">
				<exception>jakarta.jms.JMSException</exception>
				<redeliveryPolicy maximumRedeliveries="2" />
				<to id="jmsExceptionHandling" uri="seda:jmsErrorMsgCaught" />
			</onException>
			<onException id="onCommunicationException_responseFromFtpc">
				<exception>org.apache.camel.ExchangeTimedOutException</exception>
				<redeliveryPolicy maximumRedeliveries="2" />
				<to id="communicationExceptionHandling" uri="seda:jmsErrorMsgCaught" />
			</onException>
			<onException id="onRouteException_responseFromFtpc">
				<exception>java.lang.Exception</exception>
				<redeliveryPolicy maximumRedeliveries="2" />
				<to id="OnRouteExceptionHandling" uri="seda:routeErrorMsgCaught" />
			</onException>
		</route>
	</routeTemplate>
</routeTemplates>
