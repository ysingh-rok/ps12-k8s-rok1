<routeTemplates xmlns="http://camel.apache.org/schema/spring">
    <routeTemplate id="createDCSBatchTemplate">
        <route id="createDCSBatch">
            <description>Read createDCSBatch BML message from queue, transform into an HTTP request to RestFul Batch Service and process the response.</description>
            <from id="getCreateDCSBatchMessageFromQueue" uri="activemq:queue:DCSRequest_{{DCS_Adapter}}_CreateDCSBatch?exchangePattern=InOut"/>
            <log loggingLevel="DEBUG" message="${body}"/>
            <to id="transformToPostMessage" pattern="InOut" uri="language:groovy:resourceUri?script={{groovyScript.path.dcs}}CreateDCSBatch.groovy"/>
            <log loggingLevel="DEBUG" message="${body}"/>
            <to id="httpPostRequest" pattern="InOut" uri="{{batchserver.url}}?sslContextParameters=#sslConfiguration&amp;sslcontextauthMethod={{batchserver.authenticationMethod}}&amp;authUsername={{batchserver.user}}&amp;authPassword={{batchserver.password}}"/>
            <unmarshal id="UnmarshallJsonData">
                <json library="Gson" prettyPrint="false"/>
            </unmarshal>
            <to id="transformHTTPResponseMessage" pattern="InOut" uri="language:groovy:resourceUri?script={{groovyScript.path.dcs}}AcknowledgeCreateDCSBatch.groovy"/>
            <onException id="createDCSBatch_multipleCauseException">
                <exception>java.lang.Exception</exception>
                <handled>
                    <constant>true</constant>
                </handled>
                <to id="generateCreateDCSBatchRejectResponse"
                    pattern="InOut" uri="language:groovy:resourceUri?script={{groovyScript.path.dcs}}RejectCreateDCSBatch.groovy"/>
                <log message="${body}"/>
            </onException>
            <log message="${body}"/>
        </route>
    </routeTemplate>
</routeTemplates>
