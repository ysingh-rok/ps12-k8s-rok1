<routeTemplates
	xmlns="http://camel.apache.org/schema/spring">
	<routeTemplate id="inboundFileConsumeRouteTemplate">
		<route id="inboundFileConsumeRoute">
			<description>This route monitors configured folder and picks the
				file
				and sends to central file processing route.
			</description>
			<from id="getFileFromFileSystem"
				uri="file:{{in.path}}?delay=500&amp;filterFile=$simple{file:size} &lt; {{file.size.limit}}&amp;idempotentRepository=#hazelcastIdempotentRepository&amp;readLockLoggingLevel=TRACE&amp;idempotent=false&amp;readLock=idempotent&amp;shuffle=true&amp;moveFailed=.failed/$simple{file:onlyname}&amp;move={{archive-from-erp.path}}/{{common.fname.pattern}}" />
			<log id="logFileName_folderRoute"
				message="Received file from folder route: '${header[CamelFileName]}'" />
			<bean method="process" ref="fileProcessor" />
			<to id="saveToInprocessFolder" pattern="InOut"
				uri="file:{{archive-process.path}}?fileName=$simple{exchangeProperty[inProcessFileNameOnly]}&amp;exchangePattern=InOut" />
			<setHeader name="isFile">
				<constant>true</constant>
			</setHeader>	
			<bean method="validate" ref="integrationPrevalidator" />
			<setProperty name="originalBody">
				<simple>${body}</simple>
			</setProperty>
			<to id="toCentralLocalFolderFromFolderRoute"
				uri="seda:processingData" />
			<onException id="onRouteValidationException_folderRoute">
				<exception>com.rockwell.integration.util.ValidationException
				</exception>
				<to id="onRouteExceptionHandling" pattern="InOut"
					uri="seda:onRouteErrorMsgCaught" />
			</onException>
		</route>
	</routeTemplate>
</routeTemplates>
