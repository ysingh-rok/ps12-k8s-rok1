<routeTemplates xmlns="http://camel.apache.org/schema/spring" xmlns:camel="http://camel.apache.org/schema/spring">
	<routeTemplate id="idocDiscreteXmlToFileAndSendResponseToFtpcTemplate">
		<route id="idocDiscreteXmlToFileAndSendResponseToFtpc">
			<description>Create the Discrete IDoc data files and send a confirmation response back to FTPC.</description>
			<from id="transformedFileToErpId" uri="seda:transformedFileToErp" />
			<log id="logFileContent_xmlToFile" message="File content: EventId header: $simple{header[EventId]}, File content: ${body}" />
			<choice id="idocDiscreteOutboundChoice">
				<description>Choice</description>
				<when id="operationCompletionInfo">
					<xpath logNamespaces="true">/WMMBID02/E1MBXYH/E1MBXYI/LGORT</xpath>
					<to id="fileConsumedPartInfo" pattern="InOut" uri="file:{{out.path}}?exchangePattern=InOut&amp;fileName={{out-to-erp.opcompletioninfo}}-{{datetime.only.pattern}}-$simple{header[EventId]}.xml" />
					<to id="wrapConfResp2MsgEnvelope_OperationCompletionInfo" pattern="InOut" uri="language:groovy:resourceUri?script={{groovyScript.path.discrete}}WrapConfirmationResponseToMessageEnvelope.groovy" />
					<to id="operationCompletionInfoResponseToFTPC" pattern="InOnly" uri="activemq:queue:{{queue-name.response.to-ftpc.discrete}}" />
				</when>
				<when id="consumedPartInfo">
					<xpath logNamespaces="true">/WMMBID02</xpath>
					<to id="fileOperationCompletionInfo" pattern="InOut" uri="file:{{out.path}}?exchangePattern=InOut&amp;fileName={{out-to-erp.consumedpartinfo}}-{{datetime.only.pattern}}-$simple{header[EventId]}.xml" />
					<to id="wrapConfResp2MsgEnvelope_ConsumedPartInfo" pattern="InOut" uri="language:groovy:resourceUri?script={{groovyScript.path.discrete}}WrapConfirmationResponseToMessageEnvelope.groovy" />
					<to id="consumedPartInfoResponseToFTPC" pattern="InOnly" uri="activemq:queue:{{queue-name.response.to-ftpc.discrete}}" />
				</when>
				<when id="workOrderCompletionInfo">
					<xpath logNamespaces="true">/CONF21</xpath>
					<log id="logOrderNumber" message="OrderNumber: ${header[orderNumber]}" />
					<to id="fileOperationCompletionInfo" pattern="InOut" uri="file:{{out.path}}?exchangePattern=InOut&amp;fileName={{out-to-erp.wocompletioninfo}}-{{datetime.only.pattern}}-$simple{header[EventId]}.xml" />
					<to id="wrapConfResp2MsgEnvelope_OperationCompletionInfo" pattern="InOut" uri="language:groovy:resourceUri?script={{groovyScript.path.discrete}}WrapConfirmationResponseToMessageEnvelope.groovy" />
					<to id="workOrderCompletionInfoResponseToFTPC" pattern="InOnly" uri="activemq:queue:{{queue-name.response.to-ftpc.discrete}}" />
				</when>
				<otherwise id="idocDiscreteOutboundChoice_unknownMsgCaught">
					<to id="unknownMsgCaught_discreteSendToErp" uri="seda:unknownMsgCaughtToErp?exchangePattern=InOut" />
				</otherwise>
			</choice>
			<onException id="jmsException_sendResponseToFtpc">
				<exception>jakarta.jms.JMSException</exception>
				<redeliveryPolicy maximumRedeliveries="2" />
				<to id="jmsExceptionHandling_sendResponseToFtpc" pattern="InOut" uri="seda:jmsErrorOutMsgCaught" />
			</onException>
			<onException id="onCommunicationException_sendResponseToFtpc">
				<exception>org.apache.camel.ExchangeTimedOutException</exception>
				<redeliveryPolicy maximumRedeliveries="2" />
				<to id="communicationExceptionHandling_sendResponseToFtpc" pattern="InOut" uri="seda:jmsErrorOutMsgCaught" />
			</onException>
			<onException id="routeException_sendResponseToFtpc">
				<exception>java.lang.Exception</exception>
				<redeliveryPolicy maximumRedeliveries="2" />
				<to id="routeExceptionHandling_sendResponseToFtpc" pattern="InOut" uri="seda:onRouteErrorOutMsgCaught" />
			</onException>
		</route>
	</routeTemplate>
</routeTemplates>
