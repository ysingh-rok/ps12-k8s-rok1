<routeTemplates
	xmlns="http://camel.apache.org/schema/spring"
	xmlns:b2mml="http://www.mesa.org/xml/B2MML">
	<routeTemplate id="inboundFileProcessingTemplate">
		<route id="fileIdentifierRoute">
			<description>This route will read the incoming file/data and decide
				the correct route to process the file and will delegate to
				identified route.
			</description>
			<from id="processData" uri="seda:processingData" />
			<setBody>
				<simple>${exchangeProperty.originalBody}</simple>
			</setBody>
			<choice id="fileTypeIdentifierChoice">
				<description>File identifier Type Choice</description>
				<when id="materialDefinition">
					<xpath logNamespaces="true">
						/b2mml:SyncMaterialDefinition
					</xpath>
					<choice id="checkInputMethodLog">
						<when id="logForfileBasedInput">
							<simple>${header.isFile} == 'true'</simple>
							<log id="logFileName_partProcessorRoute" loggingLevel="INFO"
								message="File '$simple{exchangeProperty[inProcessFileNameOnly]}' is processing..." />
						</when>
						<otherwise id="logForRestBasedInput">
							<log id="logFileName_partProcessorRoute" loggingLevel="INFO"
								message="Payload '$simple{exchangeProperty[inProcessFileNameWithPath]}' is processing..." />
						</otherwise>
					</choice>
					<setHeader name="transformerFile">
						<simple>{{atlasmap.adm.material}}</simple>
					</setHeader>
					<setHeader name="staticJson">
						<simple>{{static.part.property.json}}</simple>
					</setHeader>
				</when>
				<otherwise id="unknownMsg_unknownfile">
					<to id="unknownMsgCaught"
						uri="seda:unknownMsgCaught?exchangePattern=InOut" />
				</otherwise>
			</choice>
			<to id="atmapConvertor" uri="seda:inboundAtlasMapProcessor" />
			<onException id="onRouteException_dataProcessing">
				<exception>java.lang.Exception</exception>
				<to id="onRouteExceptionHandling" pattern="InOut"
					uri="seda:onRouteErrorMsgCaught" />
			</onException>
		</route>
	</routeTemplate>
</routeTemplates>
