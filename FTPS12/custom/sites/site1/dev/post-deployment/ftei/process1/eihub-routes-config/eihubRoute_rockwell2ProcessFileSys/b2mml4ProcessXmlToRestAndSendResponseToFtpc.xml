<routeTemplates
	xmlns="http://camel.apache.org/schema/spring"
	xmlns:b2mml="http://www.wbf.org/xml/B2MML-V0401">
	<routeTemplate
		id="b2mml4ProcessXmlToRestAndSendResponseToFtpcTemplate">
		<route id="b2mml4ProcessXmlToRestAndSendResponseToFtpc">
			<description>Places the B2MML data into a location for the file
				system to process. It also sends a confirmation response back to
				FTPC</description>
			<from id="transformedFileToErpId" uri="seda:transformedOutFile" />
			<log id="logFileContent_ProcessSendToErp"
				message="File content: ${body}" />
			<choice id="b2mmlProcessOutboundChoice">
				<description>Choice</description>
				<when id="productionPerformanceInfo">
					<xpath logNamespaces="true">/b2mml:ProductionPerformance</xpath>
					<log id="logPayload_eventId_header"
						message="EventId header: ${header[eventId]}" />
					<to id="httpPostRequest" pattern="InOut"
						uri="{{outboundserver.url}}?sslContextParameters=#sslConfiguration&amp;httpMethod=POST&amp;sslcontextauthMethod={{outboundserver.authenticationMethod}}&amp;authUsername={{outboundserver.user}}&amp;authPassword={{outboundserver.password}}" />
					<log id="outbound_log_response"
				         message="received response from rest endpoint: ${body}" />
					<to id="wrapConfResp2MsgEnvelope_ProductionPerformanceInfo"
						pattern="InOut"
						uri="language:groovy:resourceUri?exchangePattern=InOut&amp;script={{groovyScript.path.process}}WrapConfirmationResponseToMessageEnvelope.groovy" />
					<to id="productionPerformanceInfoResponseToFTPC"
						pattern="InOnly"
						uri="activemq:queue:{{queue-name.response.to-ftpc.process}}" />
				</when>
				<otherwise id="idocProcessOutboundChoice_unknownMsgCaught">
					<to id="unknownMsgCaught_processSendToErp"
						uri="seda:unknownMsgOutCaught?exchangePattern=InOut" />
				</otherwise>
			</choice>
			<onException id="onJMSException_sendResponseToFtpc">
				<exception>jakarta.jms.JMSException</exception>
				<redeliveryPolicy maximumRedeliveries="2" />
				<to id="jmsExceptionHandling_sendResponseToFtpc" pattern="InOut"
					uri="seda:jmsErrorOutMsgCaught" />
			</onException>
			<onException
				id="onCommunicationException_sendResponseToFtpc">
				<exception>org.apache.camel.ExchangeTimedOutException</exception>
				<redeliveryPolicy maximumRedeliveries="2" />
				<to id="communicationExceptionHandling_sendResponseToFtpc"
					pattern="InOut" uri="seda:jmsErrorOutMsgCaught" />
			</onException>
			<onException id="onRouteException_sendResponseToFtpc">
				<exception>java.lang.Exception</exception>
				<redeliveryPolicy maximumRedeliveries="2" />
				<to id="onRouteExceptionHandling_sendResponseToFtpc"
					pattern="InOut" uri="seda:onRouteErrorOutMsgCaught" />
			</onException>
		</route>
	</routeTemplate>
</routeTemplates>
