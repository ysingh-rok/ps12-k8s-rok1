<routeTemplates
	xmlns="http://camel.apache.org/schema/spring"
	xmlns:b2mml="http://www.mesa.org/xml/B2MML">
	<routeTemplate id="outboundFileProcessingTemplate">
		<route id="outboundfileIdentifierRoute">
			<description>This route will read the incoming data and decide the
				correct route to process the file and will delegate to identified
				route.
			</description>
			<from id="getdataFromqueue" uri="seda:OutboundProcessing" />
			<log id="out2" message="=====from queto to route " />
			<choice id="dataTypeIdentifierChoice">
				<description>Touchpoint identifier Type Choice</description>
				<when id="consumed_material">
					<simple>${header.type} == 'CONSUMED_MATERIAL'</simple>
					<setHeader name="transformerFile">
						<simple>{{atlasmap.adm.consumedmaterial}}</simple>
					</setHeader>
				</when>
				<otherwise id="unknownMsg_unknown_data">
					<log id="logFileName_unknowndata"
						message="No configuration found to transform this json data : ${header.type}" />
					<to id="unknownMsgCaughtOutbound"
						uri="seda:unknownMsgCaught?exchangePattern=InOut" />
				</otherwise>
			</choice>
			<to id="atmapConvertor1" uri="seda:outboundAtlasMapProcessor" />
		</route>
	</routeTemplate>
</routeTemplates>
