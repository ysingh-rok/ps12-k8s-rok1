<routeTemplates xmlns="http://camel.apache.org/schema/spring">
	<routeTemplate id="outboundAtlasMapRouteTemplate">
		<route id="outboundAtlasMapRoute">
			<description>This route will process the incoming data using
				atlasmap and incoming transformer .adm file</description>
			<from id="outboundAtlasMapProcessorEndPoint"
				uri="seda:outboundAtlasMapProcessor" />
			<toD id="OutboundAtlasMapId"
				uri="atlasmap://file:${header[transformerFile]}" />
			<to id="transferFile" pattern="InOut" uri="seda:transformedOutFile" />
			<onException id="onRouteException_FileNotFound">
				<exception>java.io.FileNotFoundException</exception>
				<setHeader name="status">
					<simple>TOTAL_FAILURE</simple>
				</setHeader>
				<setHeader name="errorCode">
					<constant resultType="int">1002</constant>
				</setHeader>	
				<to id="generateResponseFailure1" uri="seda:generateResponseJson" />
			</onException>
			<onException id="onTransformerException_outboundAtlasMapRoute">
				<exception>org.apache.camel.RuntimeTransformException</exception>
				<to id="transformerExceptionHandling" pattern="InOut"
					uri="seda:transformerErrorMsgCaught" />
			</onException>
			<onException id="onCommunicationException_outboundAtlasMapRoute">
				<exception>org.apache.camel.ExchangeTimedOutException</exception>
				<to id="communicationExceptionHandling" pattern="InOut"
					uri="seda:jmsErrorMsgCaught" />
			</onException>
		</route>
	</routeTemplate>
</routeTemplates>
