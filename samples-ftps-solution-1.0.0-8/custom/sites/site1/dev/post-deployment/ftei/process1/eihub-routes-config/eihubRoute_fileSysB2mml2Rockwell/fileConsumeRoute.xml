<routeTemplates
	xmlns="http://camel.apache.org/schema/spring">
	<routeTemplate id="fileConsumeRouteTemplate">
		<route id="fileConsumeRoute">
			<description>Read Process B2mml file from input folder</description>
			<from id="getB2mmlProcessFromFileSystem"
				uri="file:{{in.path}}?delay=500&amp;filterFile=$simple{file:size} &lt; {{file.size.limit}}&amp;idempotentRepository=#hazelcastIdempotentRepository&amp;readLockLoggingLevel=TRACE&amp;idempotent=false&amp;readLock=idempotent&amp;shuffle=true&amp;moveFailed=.failed/$simple{file:onlyname}&amp;move={{archive-from-erp.path}}/{{common.fname.pattern}}" />
			<to id="validateB2mmlPath" pattern="InOut"
				uri="language:groovy:resourceUri?script={{groovyScript.path.process}}ReadFromFileSystemAndTransform_PreCheck.groovy" />
			<log id="logFileName" loggingLevel="DEBUG"
				message="Process B2mml File: ${header[CamelFileName]}" />
			<to id="saveToInprocessFolder" pattern="InOut"
				uri="file:{{archive-process.path}}?fileName=$simple{exchangeProperty[inProcessFileNameOnly]}&amp;exchangePattern=InOut" />
			<log id="logFileName_inProcessFileName" loggingLevel="DEBUG"
				message="Processing file: $simple{exchangeProperty[inProcessFileNameOnly]}" />
			<setProperty name="originalBody">
				<simple>${body}</simple>
			</setProperty>
			<setHeader name="isFile">
				<constant>true</constant>
			</setHeader>
			<to id="todataConsumeRoute" pattern="InOut"
				uri="seda:processingData" />
		</route>
	</routeTemplate>
</routeTemplates>
