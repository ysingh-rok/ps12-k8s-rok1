<routeTemplates
	xmlns="http://camel.apache.org/schema/spring"
	xmlns:camel="http://camel.apache.org/schema/spring">
	<routeTemplate id="pojoToJmsTemplate">
		<route id="pojoToJms">
			<description>Places the transformed files (JTOs) into a queue for
				FTPC to process and are also saved under Transformed file folder.
			</description>
			<from id="getTransformedFile" uri="seda:transformedFileToFtpc" />
			<to id="WrapWithEnvelope" pattern="InOut"
				uri="language:groovy:resourceUri?script={{groovyScript.path.process}}WrapPayload.groovy" />
			<log id="logPojo" loggingLevel="DEBUG"
				message="POJO to JMS: ${exchangeProperty[inProcessFileNameOnly]}: ${body}" />
			<to id="pojoToJmsQueue" pattern="InOnly"
				uri="activemq:queue:{{queue-name.to-ftpc.process}}" />
			<choice id="check for File or payload">
				<when id="dataReceivedFromFile">
					<simple>${header.isFile} == 'true'</simple>
					<marshal id="marshalPojoToXstream">
						<jacksonXml />
					</marshal>
					<to id="savePojoToTransformedFilesFolder" pattern="InOut"
						uri="file:{{archive-transformed.path}}?fileName=$simple{exchangeProperty[inProcessCurrentDateTime]}-{{common.fname.pattern}}" />
				</when>
			</choice>
			<onException id="onJMSException_pojoToJms">
				<exception>jakarta.jms.JMSException</exception>
				<redeliveryPolicy maximumRedeliveries="2" />
				<to id="jmsExceptionHandling" pattern="InOut"
					uri="seda:jmsErrorMsgCaught" />
			</onException>
			<onException id="onCommunicationException_pojoToJms">
				<exception>org.apache.camel.ExchangeTimedOutException</exception>
				<redeliveryPolicy maximumRedeliveries="2" />
				<to id="communicationExceptionHandling" pattern="InOut"
					uri="seda:jmsErrorMsgCaught" />
			</onException>
			<onException id="onRouteException_pojoToJms">
				<exception>java.lang.Exception</exception>
				<redeliveryPolicy maximumRedeliveries="2" />
				<to id="onRouteExceptionHandling" pattern="InOut"
					uri="seda:onRouteErrorMsgCaught" />
			</onException>
		</route>
	</routeTemplate>
</routeTemplates>
